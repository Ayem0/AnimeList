  <!-- ***** Header Area Start ***** -->
  <header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="{{ path('app_home') }}" class="logo">
                        <img src={{ asset("assets/images/logo.png") }} alt="">
                    </a>
                    <!-- ***** Logo End ***** -->
                    <!-- ***** Search End ***** -->
                    <div class="search-input">
                      <form id="search" action="#">
                        <input type="text" placeholder="Search an anime" id='searchText' name="searchKeyword" onkeypress="handle" />
                        <i class="fa fa-search"></i>
                      </form>
                    </div>
                    <!-- ***** Search End ***** -->
                    <!-- ***** Menu Start ***** -->
                    {% if app.user %}
                    <ul class="nav">
                      <li><a href="{{ path('app_home') }}" {% if app.request.attributes.get('_route') == 'app_home' %}class="active"{% endif %}>Home</a></li>
                      <li><a href="{{ path('app_categorie') }}" {% if app.request.attributes.get('_route') == 'app_categorie' %}class="active"{% endif %}>Categories</a></li>
                      <li><a href="{{ path('app_home') }}" {% if app.request.attributes.get('_route') == 'app_home' %}class="active"{% endif %}>My lists</a></li>
                      <li><a href="{{ path('app_home') }}" {% if app.request.attributes.get('_route') == 'app_home' %}class="active"{% endif %}>My Account <img src={{ asset('assets/images/profile-header.jpg')}} alt=""></a></li>
                    </ul>
                    {% else %}
                    <ul class="nav">
                      <li><a href="{{ path('app_home') }}" {% if app.request.attributes.get('_route') == 'app_home' %}class="active"{% endif %}>Home</a></li>
                      <li><a href="{{ path('app_categorie') }}" {% if app.request.attributes.get('_route') == 'app_categorie' %}class="active"{% endif %}>Categories</a></li>
                      <li><a href="{{ path('app_login') }}" {% if app.request.attributes.get('_route') == 'app_login' %}class="active"{% endif %}>Log in</a></li>
                      <li><a href="{{ path('app_register') }}"{% if app.request.attributes.get('_route') == 'app_register' %}class="active"{% endif %}>Register</a></li>
                      <li style="display: none;"><a href=''></a> </li>
                    </ul>   
                    {% endif %}
                  
                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
  </header>
  <!-- ***** Header Area End ***** -->